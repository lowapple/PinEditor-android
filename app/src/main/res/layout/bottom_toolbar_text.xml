<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:maxHeight="900px"
    android:orientation="vertical"
    android:paddingLeft="@dimen/editor_basic_padding"
    android:paddingRight="@dimen/editor_basic_padding"
    android:weightSum="3">

    <LinearLayout
        android:id="@+id/text_option_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="1">

        <include
            android:id="@+id/text_option"
            layout="@layout/text_option" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_size_plus_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="2">

        <include
            android:id="@+id/text_size"
            layout="@layout/text_size" />

        <include
            android:id="@+id/text_plus"
            layout="@layout/text_plus" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_option_color_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1">

        <include
            android:id="@+id/text_option_color"
            layout="@layout/text_option_color" />
    </LinearLayout>

</LinearLayout>